<?xml version="1.0" encoding="UTF-8"?>
<config>
    <!-- Uncomment this if you have PEAR Log installed
    <log>
      <type>file</type>
      <name>/path/to/propel.log</name>
      <ident>propel-bookstore</ident>
      <level>7</level>
    </log>
    -->
    <propel>
        <datasources default="thewall">
            <datasource id="thewall">
                <adapter>mysql</adapter> <!-- sqlite, mysql, mssql, oracle, or pgsql -->
                <connection>
                    <dsn>mysql:host=localhost;dbname=thewall</dsn>
                    <user>root</user>
                    <password>root</password>
                </connection>
            </datasource>
        </datasources>
    </propel>
</config>